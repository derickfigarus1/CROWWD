<script>
document.addEventListener('DOMContentLoaded', (event) => {
  function showVerificationModal(bookingId) {
    const modalId = 'verificationModal-' + bookingId;
    console.log(modalId)
    const modalElement = document.getElementById(modalId);
    console.log(modalElement)

    if (modalElement) {
      modalElement.classList.toggle('show');
    }
  }

  document.querySelectorAll('.verification-btn').forEach(button => {
    button.addEventListener('click', () => {
      const bookingId = button.id.split('-')[1];
      showVerificationModal(bookingId);
    });
  });

  function closeModal(bookingId) {
    const modalId = 'verificationModal-' + bookingId;
    const modalElement = document.getElementById(modalId);
    if (modalElement) {
      modalElement.classList.toggle('show');
    }
  }

  document.querySelectorAll('.btn').forEach(closeButton => {
    closeButton.addEventListener('click', () => {
      const bookingId = closeButton.id.split('-')[1];
      closeModal(bookingId);
    });
  });
});

</script>



  
  
